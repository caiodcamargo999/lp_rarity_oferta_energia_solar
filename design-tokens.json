{
  "font": {
    "familyPrimary": "Inter, 'Inter Placeholder', system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif",
    "weights": {
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "scale": {
      "h1": "clamp(2.25rem, 2vw + 1rem, 3rem)",
      "h2": "clamp(1.8rem, 1.5vw + 1rem, 2.6rem)",
      "h3": "clamp(1.5rem, 1.2vw + 1rem, 2rem)",
      "h4": "clamp(1.25rem, 1vw + 1rem, 1.63rem)",
      "h5": "clamp(1.125rem, 0.8vw + 1rem, 1.25rem)",
      "h6": "clamp(1rem, 0.6vw + 1rem, 1.125rem)",
      "body": "clamp(0.95rem, 0.4vw + 1rem, 1rem)",
      "small": "clamp(0.875rem, 0.3vw + 1rem, 0.9rem)",
      "overline": "clamp(0.75rem, 0.2vw + 1rem, 0.8rem)"
    },
    "letterSpacing": {
      "tight": "-0.04em",
      "normal": "-0.03em",
      "wide": "-0.02em",
      "wider": "0.05em"
    },
    "lineHeight": {
      "tight": "120%",
      "normal": "140%",
      "relaxed": "160%"
    }
  },
  "color": {
    "brand": {
      "50": "#CCE5FF",
      "100": "#99CCFF",
      "500": "#0F6AE7",
      "600": "#0D5BD1",
      "700": "#0B4CBB"
    },
    "blue": {
      "50": "#CCE5FF",
      "100": "#99CCFF",
      "500": "#0F6AE7",
      "600": "#227AF4",
      "700": "#006EDD"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#BFBFBF",
      "tertiary": "#747474",
      "muted": "#5B5B5B"
    },
    "background": {
      "primary": "#000000",
      "secondary": "#0C0C0C",
      "tertiary": "#2C2C2C"
    }
  },
  "radius": {
    "sm": "7px",
    "md": "10px",
    "lg": "16px",
    "xl": "24px",
    "full": "999px"
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "shadow": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  },
  "motion": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "easeOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "button": {
    "sizes": {
      "sm": {
        "height": "2.5rem",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem"
      },
      "md": {
        "height": "3rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem"
      },
      "lg": {
        "height": "3.5rem",
        "padding": "1rem 2rem",
        "fontSize": "1.125rem"
      }
    },
    "variants": {
      "primary": {
        "background": "#0F6AE7",
        "color": "#FFFFFF",
        "border": "none"
      },
      "secondary": {
        "background": "transparent",
        "color": "#0F6AE7",
        "border": "2px solid #0F6AE7"
      },
      "ghost": {
        "background": "transparent",
        "color": "#FFFFFF",
        "border": "none"
      }
    }
  }
}
